<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="35dp"
            android:layout_height="32dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/img_01"/>

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/img_head"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:text="似水流年"
                android:textColor="@color/black_text_n"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/img_reply"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:background="@drawable/icon_reply"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/img_head"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/line_star"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                
                <ImageView
                    android:id="@+id/img_star1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/icon_star_s"/>
                <ImageView
                    android:id="@+id/img_star2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/icon_star_s"/>

                <ImageView
                    android:id="@+id/img_star3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/icon_star_s"/>

                <ImageView
                    android:id="@+id/img_star4"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/icon_star_s"/>

                <ImageView
                    android:id="@+id/img_star5"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/icon_star_n"/>
                
            </LinearLayout>

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="2015-08-06 11:11"
                android:singleLine="true"
                android:textSize="13sp" />
        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/txt_customer_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="店家服务斑斑大,携手走过十年的我们，感谢每一位的陪伴，我们为。"
        android:textColor="@color/black_text_n" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="渝香辣婆婆:"
            android:textColor="@color/sky_blue" />

        <TextView
            android:id="@+id/txt_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/txt_shop_name"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="店家服务斑斑大,携手走过十年的我们，感谢每一位的陪伴，我们为。"
            android:textColor="@color/black_text_n" />

        <EditText
            android:id="@+id/edt_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/txt_shop_name"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:hint="回复小小花花花姑凉"
            android:textSize="13sp"
            android:textColor="@color/black_text_n"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>