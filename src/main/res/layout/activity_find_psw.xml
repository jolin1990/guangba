<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light_s"
    tools:context="com.yunxiang.shopkeeper.activity.FindPswActivity"
    tools:ignore="HardcodedText">

    <include
        android:id="@+id/in_title"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_alignParentTop="true"
        layout="@layout/in_title_bar"/>

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/in_title"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"/>

        <EditText
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="36dp"
            android:gravity="center_vertical"
            android:background="@null"
            android:hint="手机号"
            android:textSize="14sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="36dp"
            android:background="@color/gray_light_n"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="36dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_verify_key"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:background="@null"
                android:textSize="14sp"
                android:hint="输入验证码"/>
            <TextView
                android:id="@+id/txt_verify_key"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/bg_edit_orenge"
                android:textColor="@color/orange"
                android:text="请获取验证码"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="36dp"
            android:background="@color/gray_light_n"/>

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="36dp"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:background="@null"
            android:hint="请输入新密码"
            android:textSize="14sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="36dp"
            android:background="@color/gray_light_n"/>

        <EditText
            android:id="@+id/edt_confirm_psw"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="36dp"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:background="@null"
            android:hint="确认新密码"
            android:textSize="14sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_text_orange"
        android:text="确认并登陆"
        android:textColor="@color/white"
        android:layout_below="@+id/line"/>

</RelativeLayout>
