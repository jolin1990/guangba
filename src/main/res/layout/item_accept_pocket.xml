<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@color/white"
    tools:ignore="HardcodedText">

    <FrameLayout
        android:id="@+id/fl_1"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp">
        <ImageView
            android:id="@+id/img_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_01"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/img_item1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/icon_cricle"
            android:contentDescription="@string/app_name" />

    </FrameLayout>


    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="10dip"
        android:layout_toEndOf="@+id/fl_1"
        android:gravity="center"
        android:text="182*****111"
        android:textColor="@color/black_text_n"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/img_vip"
        android:layout_width="15dip"
        android:layout_height="40dp"
        android:layout_toEndOf="@+id/txt_name"
        android:background="@drawable/icon_vip"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/txt_money"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/black_text_n"
        android:text="1.00å…ƒ" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/fl_1"
        android:gravity="center"
        android:text="2015-09-16"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/txt_date"
        android:gravity="center"
        android:text="11:23"
        android:textSize="13sp" />

</RelativeLayout>