<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light_n"
    tools:ignore="HardcodedText"
    android:orientation="vertical"
    tools:context="com.yunxiang.shopkeeper.activity.MyCountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white_light">

        <include
            android:id="@+id/in_title"
            android:layout_width="310dp"
            android:layout_height="48dip"
            layout="@layout/in_title_bar"/>

        <TextView
            android:id="@+id/txt_record"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_toEndOf="@+id/in_title"
            android:text="记录"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/sky_blue"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:background="@color/gray_light_n">

        <TextView
            android:id="@+id/txt_dollar"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="top|center_horizontal"
            android:textColor="@color/white"
            android:background="@drawable/bg_orange_round"
            android:textSize="60sp"
            android:text="$"/>
        <TextView
            android:id="@+id/txt_yue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_dollar"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray_dark"
            android:textSize="20sp"
            android:text="余额"/>

        <TextView
            android:id="@+id/txt_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_yue"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="￥1222.00"/>

    </RelativeLayout>

    <TextView
        android:clickable="true"
        android:id="@+id/txt_put_money"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/orange"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:text="充值"/>

    <TextView
        android:clickable="true"
        android:id="@+id/txt_obtain_money"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textColor="@color/black_text_n"
        android:textSize="22sp"
        android:text="提现"/>

</LinearLayout>
