<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_light"
    tools:ignore="HardcodedText"
    android:orientation="vertical"
    tools:context=".activity.CustomerListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/in_title"
            android:layout_width="310dp"
            android:layout_height="48dip"
            layout="@layout/in_title_bar"/>

        <TextView
            android:id="@+id/txt_sure"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:text="确定"
            android:background="@color/gray_light_s"
            android:layout_toEndOf="@+id/in_title"
            android:gravity="center"
            android:textColor="@color/sky_blue"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/sky_blue">

        <TextView
            android:id="@+id/txt_had_selected"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:text="已选(0)"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txt_select_all"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="15dp"
            android:text="全选"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/gray_light_n"
        android:dividerHeight="0.5dp"/>

</LinearLayout>
