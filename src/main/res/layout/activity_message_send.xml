<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_light"
    tools:ignore="HardcodedText"
    tools:context="com.yunxiang.shopkeeper.activity.MessageSendActivity">

    <include
        android:id="@+id/in_title"
        android:layout_width="310dp"
        android:layout_height="48dip"
        layout="@layout/in_title_bar"/>

    <TextView
        android:id="@+id/txt_send"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_toEndOf="@+id/in_title"
        android:gravity="center"
        android:textColor="@color/black_text_n"
        android:text="发送"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/in_title"
        android:background="@color/gray"/>

    <EditText
        android:id="@+id/edt_info"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/in_title"
        android:gravity="top"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textSize="14sp"
        android:background="@color/white"
        android:hint="亲爱的顾客，我想对你说……"
        android:inputType="text"/>

    <ImageView
        android:id="@+id/img_add_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/edt_info"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/icon_add_big"/>

</RelativeLayout>
