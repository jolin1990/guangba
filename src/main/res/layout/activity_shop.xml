<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_light"
    tools:ignore="HardcodedText"
    android:orientation="vertical"
    tools:context="com.yunxiang.shopkeeper.activity.ShopActivity">

    <FrameLayout
        android:id="@+id/fl_img"
        android:layout_width="match_parent"
        android:layout_height="215dp">
        <ImageView
            android:id="@+id/img_shop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_near_01"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/txt_shop_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="渝香辣婆婆"/>

        <ImageView
            android:id="@+id/img_add_pic"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginTop="185dp"
            android:layout_marginStart="270dp"
            android:background="@drawable/icon_add_pic"
            android:contentDescription="@null"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/fl_img"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_send_favorable"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/icon_send_favorable"/>

            <View
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:background="@color/gray_light_n"/>


            <Button
                android:id="@+id/btn_send_packet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/icon_send_packet"/>

            <View
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:background="@color/gray_light_n"/>

            <Button
                android:id="@+id/btn_shop_active"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/icon_shop_active"/>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/gray_light_n"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_client_manage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/icon_clientele_manage"/>

            <View
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:background="@color/gray_light_n"/>

            <Button
                android:id="@+id/btn_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/icon_order"/>

            <View
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:background="@color/gray_light_n"/>

            <Button
                android:id="@+id/btn_accounts_manage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/icon_accounts_manage"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/gray_light_n"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_my_account"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/icon_my_account"/>

            <View
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:background="@color/gray_light_n"/>


            <Button
                android:id="@+id/btn_merchandise_manage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/icon_shop_manage"/>

            <View
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:background="@color/gray_light_n"/>

            <Button
                android:id="@+id/btn_my_shop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/icon_my_shop"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_scan"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/icon_sweep"/>

</RelativeLayout>
