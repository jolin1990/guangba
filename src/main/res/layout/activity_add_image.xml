<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light_s"
    tools:ignore="HardcodedText"
    tools:context="com.yunxiang.shopkeeper.activity.AddSpannerActivity">

    <LinearLayout
        android:id="@+id/line_title"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@color/sky_blue"
        android:orientation="horizontal"
        tools:ignore="HardcodedText">

        <ImageView
            android:id="@+id/img_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/icon_left_arrow"
            android:contentDescription="@null"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/txt_middle"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="商铺图片"
            android:textColor="@color/white"
            android:textSize="18.0sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_delete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:textSize="13.0sp"
            android:textColor="@color/white"
            android:text="删除"
            android:visibility="visible">

        </TextView>
    </LinearLayout>

    <GridView
        android:id="@+id/gv_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_title"
        android:layout_marginStart="6dip"
        android:layout_marginEnd="6dip"
        android:adjustViewBounds="true"
        android:verticalSpacing="10dp"
        android:numColumns="2"
        android:scrollbars="none"/>

    <ImageView
        android:id="@+id/img_test"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/line_dialog"/>

    <LinearLayout
        android:id="@+id/line_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:visibility="invisible">
        <TextView
            android:id="@+id/txt_photograph"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="@color/black_text_n"
            android:text="拍照" />
        <TextView
            android:id="@+id/txt_picture"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="@color/black_text_n"
            android:text="相片" />
        <TextView
            android:id="@+id/txt_cancel"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="@color/black_text_n"
            android:text="取消" />
    </LinearLayout>


</RelativeLayout>
