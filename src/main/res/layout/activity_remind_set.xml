<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    tools:ignore="HardcodedText"
    android:orientation="vertical"
    tools:context="com.yunxiang.shopkeeper.activity.RemindSetActivity">

    <include
        android:id="@+id/in_title"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        layout="@layout/in_title_bar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_light_n"/>

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:textColor="@color/black_text_n"
            android:text="留言提醒"/>

        <ToggleButton
            android:id="@+id/switch1"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/switch_btn"
            android:checked="false"
            android:textOff=""
            android:textOn=""/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_light_n"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:textColor="@color/black_text_n"
            android:text="支付提醒"/>

        <ToggleButton
            android:id="@+id/switch2"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/switch_btn"
            android:checked="false"
            android:textOff=""
            android:textOn=""/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_light_n"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:textColor="@color/black_text_n"
            android:text="客户进店提醒"/>

        <ToggleButton
            android:id="@+id/switch3"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/switch_btn"
            android:checked="false"
            android:textOff=""
            android:textOn=""/>
    </RelativeLayout>

</LinearLayout>
