<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gary_backgound"
    tools:context="com.yunxiang.shopkeeper.RechargeActivity"
    android:orientation="vertical">
  <include layout="@layout/pay_title"/>

   <RelativeLayout
       android:background="#ffffff"
       android:paddingLeft="20dp"
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:paddingRight="20dp"
       android:layout_height="43dp">
    <TextView
        android:id="@+id/tv_t"
        android:textSize="16sp"
        android:text="金额"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
       <EditText
           android:id="@+id/et_money"
           android:textSize="20sp"
           android:background="#00000000"
           android:inputType="numberDecimal"
           android:hint="请在此输入金额"
           android:layout_marginLeft="10dp"
           android:layout_toRightOf="@+id/tv_t"
           android:layout_width="match_parent"
           android:layout_height="match_parent" />
   </RelativeLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:text="支付方式"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:background="#ffffff"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:paddingRight="20dp"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_ali"
            android:src="@mipmap/icon_zhifubao"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
       <LinearLayout
           android:layout_centerVertical="true"
           android:layout_marginLeft="20dp"
           android:layout_toRightOf="@+id/iv_ali"
           android:orientation="vertical"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <TextView
               android:text="支付宝"
               android:textSize="18sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:text="推荐用户使用"
               android:textSize="14sp"
               android:layout_marginTop="2dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </LinearLayout>
       <CheckBox
           android:checked="true"
           android:id="@+id/cb_ali"
           android:layout_centerVertical="true"
           android:button="@drawable/pay_check"
           android:layout_alignParentRight="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:background="#F1F0EE"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <RelativeLayout
        android:background="#ffffff"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:paddingRight="20dp"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_chat"
            android:src="@mipmap/icon_wechat"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/iv_chat"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="微信支付"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="推荐微信用户使用"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <CheckBox
            android:id="@+id/cb_chat"
            android:layout_centerVertical="true"
            android:button="@drawable/pay_check"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

      <Button
          android:id="@+id/bt_commit"
          android:background="#00CDDA"
          android:text="确认"
          android:textSize="22sp"
          android:textColor="#ffffff"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="90dp"
          android:layout_width="match_parent"
          android:layout_height="50dp" />

</LinearLayout>
